# Docker Compose Environment Variables - Example Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Database
DATABASE_URL=postgresql://user:pass@host.neon.tech/database?sslmode=require&channel_binding=require

# AI Provider
OPENROUTER_API_KEY=sk-or-v1-your-key-here
AI_MODEL=deepseek/deepseek-chat

# Authentication (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-minimum-32-character-secret-here

# GitHub OAuth (get from GitHub Developer Settings)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# URLs (adjust for your environment)
CLIENT_URL=http://localhost:3000
SITE_URL=http://localhost:3000
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
TRUSTED_ORIGINS=http://localhost:3000
